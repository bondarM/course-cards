<h1>add</h1>
<form action="/add" method="POST">
        <div class="input-field col s6">
          <input id="title" name="title" type="text" class="validate" required>
          <label for="title">Название курса</label>
            <span class="helper-text" data-error="Введите название" ></span>
        </div>

         <div class="input-field col s6">
          <input id="price" name="price" type="number" class="validate" required>
          <label for="price">Стоимость курса</label>
           <span class="helper-text" data-error="Введите стоимость" ></span>
        </div>

        <div class="input-field col s6">
          <input required  name="img" id="img" type="text" class="validate">
          <label for="img">URL картинки</label>
           <span class="helper-text" data-error="Введите URL" ></span>
        </div>

        <button class="btn btn-primary">Добавить курс</button>
</form>