<h1>Card</h1>
<div id="card">
{{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Названия</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button data-id="{{id}}" class="btn btn-small js-remove">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Цена:</strong> <span class="price">{{price}}</span></p>
{{else}}

{{/if}}
</div>
