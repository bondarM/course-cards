<h1>Редактировать {{courses.title}}</h1>
<form action="/courses/edit" method="POST">
        <div class="input-field col s6">
          <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
          <label for="title">Название курса</label>
            <span class="helper-text" data-error="Введите название" ></span>
        </div>

         <div class="input-field col s6">
          <input id="price" name="price" type="number" class="validate" value="{{course.price}}" required>
          <label for="price">Стоимость курса</label>
           <span class="helper-text" data-error="Введите стоимость" ></span>
        </div>

        <div class="input-field col s6">
          <input required  name="img" id="img" type="text" class="validate" value="{{course.img}}">
          <label for="img">URL картинки</label>
           <span class="helper-text" data-error="Введите URL" ></span>
        </div>
        <input type="hidden" name="id" value="{{course.id}}" id="">
        <button class="btn btn-primary">Редактировать курс</button>
</form>