
  <h2>  courses-page</h2>
  {{#if courses.length}}
  {{#each courses}}
    <div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img class="img-courses" src='{{img}}' alt="{{title}}">
         
        </div>
        <div class="card-content">
           <span class="card-title">{{title}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action actions">
          <a target="_blank" href="/courses/{{id}}">Открыть курс</a>
           <a  href="/courses/{{id}}/edit?allow=true">Редактировать</a>
           <form action="/card/add" method="POST">
           <input type="hidden" value="{{id}}" name="id">
             <button type="submit" class="btn btn-primary">Купить</button> </form>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  <p>курсов пока нет</p>
  {{/if}}
  <a href="/">back</a>
